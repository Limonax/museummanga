<!DOCTYPE html>
<html>
<head>
 
  <meta charset="utf-8">
  
</head>




<body>



<p id="notice"><%= notice %></p>

<h1>Artists</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Description</th>
      <th>Date</th>
      <th>Picture</th>
      <th>Format</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @artists.each do |artist| %>
      <tr>
        <td><%= artist.title %></td>
        <td><%= artist.author %></td>
        <td><%= artist.description %></td>
        <td><%= artist.date %></td>
        <td><%= artist.picture %></td>
        <td><%= artist.formatt %></td>
        <td><%= link_to 'Show', artist %></td>
        <td><%= link_to 'Edit', edit_artist_path(artist) %></td>
        <td><%= link_to 'Destroy', artist, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
</body>
<%= link_to 'New Artist', new_artist_path %>
</html>